{
    "name": "42 Ubuntu Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-ceintl.vscode-language-pack-ja",
                "wholroyd.jinja",
                "ms-vscode.cpptools-extension-pack",
                "ms-vscode.cpptools",
                "twxs.cmake",
                "ms-vscode.cmake-tools",
                "visualstudioexptteam.intellicode-api-usage-examples",
                "keyhr.42-c-format",
                "dokca.42-ft-count-line",
                "kube.42header",
                "njpwerner.autodocst"
            ]
        }
    },

    // コンテナ内で特定のVS Code設定を適用する場合
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },

    // コンテナ作成後に実行するコマンド（例: 依存関係のインストールなど）
    // "postCreateCommand": "npm install",

    // ホストからコンテナへポートをフォワーディングする場合
    // "forwardPorts": [3000],

    // コンテナ内で作業するデフォルトのワークスペースフォルダ
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

    // コンテナ実行時のDocker引数を追加する場合
    // "runArgs": ["--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined"],

    // リモートユーザー（コンテナ内のユーザー）を指定
    // デフォルトはDockerfileで最後に定義されたユーザー、またはrootです。
    // 必要に応じて "remoteUser": "vscode" などを設定します。
    // mcr.microsoft.com/devcontainers/base イメージは通常 'vscode' ユーザーを作成します。
    "remoteUser": "vscode"
}
